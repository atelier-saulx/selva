{
  "name": "@saulx/selva-server",
  "version": "3.2.0",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "/pre-commit": "lint-staged",
      "/pre-push": "node services/db/lib/start & lerna run test --parallel --since origin -- -- --fail-fast; kill $!",
      "/post-merge": "lerna bootstrap --since $(git rev-parse HEAD) --include-filtered-dependencies"
    }
  },
  "repository": "https://github.com/atelier-saulx/selva",
  "lint-staged": {
    "{js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.ts",
      "!test/assertions"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "bin": {
    "selva-server": "/bin/index.js"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.8.0",
    "@types/pidusage": "^2.0.1",
    "@types/redis": "^2.8.28",
    "ava": "3.15.0",
    "cli-progress": "^3.9.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.4",
    "typescript-to-lua": "^0.30.1"
  },
  "dependencies": {
    "@saulx/utils": "^1.6.6",
    "@saulx/selva-diff": "^1.0.17",
    "@saulx/selva": "3.2.0",
    "aws-sdk": "^2.841.0",
    "body-parser": "^1.19.0",
    "before-exit": "^1.0.0",
    "chalk": "^4.1.0",
    "data-record": "^0.5.2",
    "rimraf": "^3.0.2",
    "dropbox": "^9.0.0",
    "flexsearch": "^0.6.32",
    "get-port": "^5.1.1",
    "os-utils": "^0.0.14",
    "mkdirp": "1.0.4",
    "node-fetch": "^2.6.1",
    "pidusage": "^2.0.21",
    "redis": "^2.8.0"
  }
}