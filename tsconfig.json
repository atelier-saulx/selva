{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~selva/*": ["src/*"]
    },
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "strict": true,
  "exclude": ["node_modules", "test", "dist", "luaScripts"]
}
